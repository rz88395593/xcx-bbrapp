<!--components/verMsgBlock/verMsgBlock.wxml-->
<view wx:if='{{isShow}}'>
  <view class='mask_layer' bindtap='modal_click_Hidden' />
  <view class='modal_box'>
    <view class="title">{{title}}</view>
    <view class='content'>
      <text class='modalMsg'></text>
      <textarea class='input_show1' bindinput='changeModalMsg' auto-height value='{{modalMsg}}' placeholder='{{modalMsg_placeholder}}'></textarea>
    </view>
    <view class='btn1'>
      <view bindtap='modal_click_Hidden' class='cancel'>取消</view>
      <view bindtap='Sure' class='Sure'>确定</view>
    </view>
  </view>
</view>


