/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f4f4f4;
  font-size: 30rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 80rpx;
}

.page__bd {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.page__bd_spacing {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page__ft {
  padding-bottom: 20rpx;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 40rpx;
  font-weight: 40rpx;
}

.page__desc {
  margin-top: 10rpx;
  color: #888;
  text-align: left;
  font-size: 30rpx;
}

.weui-cell-height {
  height: auto;
  min-height: 100rpx;
}

.weui-cell-height-auto {
  height: auto;
  min-height: 200rpx;
}

.text_grey {
  font-size: 30rpx;
  margin-top: 5%;
  color: #666;
  align-self: center;
}

.buttonStyle {
  margin-left: 5%;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  background-color: rgb(92, 164, 93);
  color: rgb(255, 255, 255);
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  min-height: 88rpx;
}

.customButton {
  background-color: transparent;
  border-style: none;
  outline: none;
  align-items: center;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  position: relative;
}

.customButton::after {
  border: none;
}

.picker-view {
  min-height: 100rpx;
  height: auto;
}

.pickerView {
  min-height: 100rpx;
  height: auto;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.picker {
  /* float: left; */
  width: 100%;
}

.pickerImage {
  padding-right: 0px;
  width: 20px;
  height: 20px;
  position: absolute;
  right: 0px;
  top: 50%;
  transform: translateY(-50%);
}

.pickerImage_width {
  width: 90%;
}

.pickerImage_right {
  padding-right: 10px;
}

.pickerCustom {
  width: 100%;
}

.noneSelect {
  color: #808080;
}

.noneDataView {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}

.noneDataImage {
  width: 200rpx;
  height: 200rpx;
  margin-left: calc((100% - 200rpx) / 2);
}

.noneDataText {
  color: lightgray;
  text-align: center;
}
