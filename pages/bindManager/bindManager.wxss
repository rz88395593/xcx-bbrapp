/* pages/bindManager/bindManager.wxss */
page{
  background: #f5f5f5;
}
.content-view {
  background: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
.scroll-y{
  background: #f5f5f5;
}
.empty-view {
  background: #f5f5f5;
  height: 100%;
  justify-items: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.nomore-view {
  width: 100%;
  padding: 5px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #666;
}
.empty-image {
  margin-top: 30%;
  margin-bottom: 10rpx;
  width: 220rpx;
  height: 220rpx;
}
.loading-button::after {
  border: none;
}
.loading-view {
  width: 100%;
}
.empty-text {
  color: #999;
}
.view-content {
  width: 100%;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.view-card {
  width: 100%;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 8rpx 2rpx 2rpx #ccc;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-text-bold {
  margin-left: 20rpx;
  font-weight: 600;
  color: #333;
  font-size: 32rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}

.item-text {
  margin-left: 20rpx;
  color: #333;
  font-size: 26rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}

.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #F74C4C;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click text{
    font-size: 26rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}