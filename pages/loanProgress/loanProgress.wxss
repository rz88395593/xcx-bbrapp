/* pages/loanProgress/loanProgress.wxss */

page {
  background: #f5f5f5;
}

.content-view {
  background: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.item-view {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.status-content-view {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-view {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-view {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
}

.status-view {
  width: 10rpx;
  height: 100%;
}

.status-colot-green {
  background-color: green;
}

.status-colot-red {
  background-color: red;
}

.status-colot-ye {
  background-color: yellow;
}

.status-colot-grey {
  background-color: grey;
}

.round-img {
  height: 25rpx;
  width: 25rpx;
  border-radius: 100%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
button[type=default][plain] {
  margin: 20rpx;
  color: white;
  border: 1px solid #F74C4C;
  background-color: #F74C4C;
}

.button-hover-other {
}

.buttonStyle {
  background-color: #F74C4C;
  border-radius: 44rpx;
}

.item-text {
  color: #333;
  font-size: 26rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}