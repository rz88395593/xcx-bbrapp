/* pages/upload/upload.wxss */
@import "../elementary/elementary.wxss";

page {
  background-color: #f4f4f4;
}

.swiper-tab {
  position: relative;
  width: 100%;
  /* height: 88rpx; */
  display: flex;
  box-sizing: border-box;
  background-color: white;
  justify-content: center;
  align-items: center;
  text-align: center;
  line-height: 88rpx;
}

.swiper_content {
  width: 100%;
  height: 100%;
}

.content-view {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 0rpx 10rpx #f5f5f5;
  background: white;
  justify-content: space-between;
  box-sizing: border-box;
  /* border-radius: 20rpx; */
}

.topView {
  margin-top: -20rpx;
  margin-bottom: 15rpx;
  margin-left: 20rpx;
}

.topText {
  font-size: 26rpx;
  color: rgb(107, 107, 107);
}

.otherStyle > .imageStyle {
  top: 0px;
  right: 0px;
  width: 100%;
  height: 100%;
  position: absolute;
}

.otherStyle:before {
  content: '';
  display: block;
  padding-top: 65%;
}

.viewStyle {
  height: auto;
  width: 100%;
  background-color: #fff;
  display: inline-block;
  /* border-radius: 20rpx; */
  margin-bottom: 30rpx;
}

.removeStyle {
  top: -15rpx;
  right: -15rpx;
  height: 30rpx;
  width: 30rpx;
  position: absolute;
}

.uploadStatus {
  left: 0rpx;
  bottom: 0rpx;
  height: 30rpx;
  width: 30rpx;
  position: absolute;
}

.otherStyle {
  position: relative;
  width: calc((100% - 120rpx) / 3);
  float: left;
  display: block;
  margin-left: 30rpx;
  margin-top: 30rpx;
  /* margin-bottom: 30rpx; */
}

.list_name_box {
  background: #fff;
  border-bottom: 1px solid #efefef;
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 0 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.view-row {
  /* width: 80%; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view-row-reverse {
  width: 20%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.icon_down {
  width: 35rpx;
  height: 35rpx;
  transition: transform 0.3s;
}

.icon_down_rotate {
  transform: rotate(180deg);
}

.buttonStyle_upload {
  margin: 5%;
  width: 90%;
  /* height: 88rpx;
  line-height: 88rpx; */
  font-size: 28rpx;
  background-color: rgb(92, 164, 93);
  color: rgb(255, 255, 255);
}

.item-text-finish {
  color: #666;
  background: #e9e9e9;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
}

.item-text-wait {
  color: #f79e1d;
  background: #fde2bc;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
}

.list_item_name {
  /* width: 100%; */
}

.redStar {
  color: red;
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  text-align: center;
}

.flexKnow {
  height: 92rpx;
  width: 90%;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  line-height: 92rpx;
  text-align: center;
  margin-left: 30rpx;
}

.signalLeft, .signalRight {
  width: 30rpx;
  height: 25rpx;
  margin-top: 32rpx;
}

.signalLeft {
  margin-left: 170rpx;
}

.textKnow {
  margin-left: 17rpx;
  font-size: 30rpx;
}

.signalRight {
  margin-left: 17rpx;
}

.botKnow {
  width: 604rpx;
  height: 88rpx;
  border-radius: 60rpx;
  line-height: 88rpx;
  text-align: center;
  color: white;
  font-size: 28rpx;
  margin-left: 30rpx;
  background-color: #32a15f;
  margin-top: 7rpx;
}

.contentList {
  margin-left: 30rpx;
  font-size: 28rpx;
  margin-right: 35rpx;
  color: black;
  font-weight: 500;
}

.quesIcon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
